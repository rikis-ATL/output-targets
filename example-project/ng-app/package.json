{
  "name": "ng-app",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:stats": "ng build --stats-json",
    "bundle-report": "npm run build:stats && npx webpack-bundle-analyzer dist/ng-app/stats.json",
    "build:individual": "ng build --configuration=individual",
    "build:bulk": "ng build --configuration=bulk",
    "compare-bundles": "npm run build:individual && npm run build:bulk && npm run analyze-bundles",
    "analyze-bundles": "node analyze-bundles.js",
    "test-tree-shaking": "npm run compare-bundles",
    "watch": "ng build --watch --configuration development"
  },
  "private": true,
  "files": [
    "dist"
  ],
  "dependencies": {
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0",
    "component-library-angular": "workspace:../component-library-angular/projects/library/dist"
  },
  "devDependencies": {
    "@angular/build": "^20.0.2",
    "@angular/cli": "^20.0.2",
    "@angular/compiler-cli": "^20.0.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "typescript": "~5.8.2"
  }
}
